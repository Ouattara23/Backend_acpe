<%- include('partials/header') %>

<main>
    <section class="bg-green-100 flex items-center justify-center">
        <div class="flex justify-center items-center min-h-screen bg-gray-100">
            <div class="container mx-auto p-10 bg-white shadow-lg rounded-lg w-full max-w-2xl mt-30">
                <h1 class="text-2xl font-bold text-center mb-6">Inscription d'une École</h1>
                <form class="space-y-4" method="post" action="/inscription-ecole" enctype="multipart/form-data">
                    
                    <!-- Informations sur l'école -->
                    <div>
                        <label for="nom_ecole" class="block font-medium">Nom de l'école :</label>
                        <input type="text" id="nom_ecole" name="nom_ecole" class="w-full px-3 py-2 border rounded text-black" required>
                    </div>
                    
                    <div>
                        <label for="logo_ecole" class="block font-medium">Logo de l'école :</label>
                        <input type="file" id="logo_ecole" name="logo_ecole" class="w-full px-3 py-2 border rounded" accept="image/*">
                    </div>
                    
                    <div>
                        <label for="adresse_ecole" class="block font-medium">Adresse :</label>
                        <input type="text" id="adresse_ecole" name="adresse_ecole" class="w-full px-3 py-2 border rounded text-black">
                    </div>
                    
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label for="ville_ecole" class="block font-medium">Ville :</label>
                            <input type="text" id="ville_ecole" name="ville_ecole" class="w-full px-3 py-2 border rounded text-black">
                        </div>
                        <div>
                            <label for="code_postal_ecole" class="block font-medium">Code Postal :</label>
                            <input type="text" id="code_postal_ecole" name="code_postal_ecole" class="w-full px-3 py-2 border rounded text-black">
                        </div>
                    </div>
                    
                    <!-- Informations sur l'enseignant responsable -->
                    <div>
                        <label for="nom_enseignant" class="block font-medium">Nom de l'enseignant responsable :</label>
                        <input type="text" id="nom_enseignant" name="nom_enseignant" class="w-full px-3 py-2 border rounded text-black" required>
                    </div>
                    
                    <div>
                        <label for="matiere_enseignee" class="block font-medium">Matière enseignée :</label>
                        <input type="text" id="matiere_enseignee" name="matiere_enseignee" class="w-full px-3 py-2 border rounded text-black" required>
                    </div>
                    
                    <!-- Informations académiques -->
                    <div>
                        <label for="niveaux_scolaires" class="block font-medium">Niveaux scolaires proposés :</label>
                        <input type="text" id="niveaux_scolaires" name="niveaux_scolaires" class="w-full px-3 py-2 border rounded text-black" placeholder="Ex: Primaire, Collège, Lycée">
                    </div>
                    
                    <!-- Informations de connexion -->
                    <div>
                        <label for="email_admin" class="block font-medium">Email administrateur :</label>
                        <input type="email" id="email_admin" name="email_admin" class="w-full px-3 py-2 border rounded text-black" required>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label for="mot_de_passe" class="block font-medium">Mot de passe :</label>
                            <input type="password" id="mot_de_passe" name="mot_de_passe" class="w-full px-3 py-2 border rounded text-black" required>
                        </div>
                        <div>
                            <label for="confirmer_mot_de_passe" class="block font-medium">Confirmer le mot de passe :</label>
                            <input type="password" id="confirmer_mot_de_passe" name="confirmer_mot_de_passe" class="w-full px-3 py-2 border rounded text-black" required>
                        </div>
                    </div>
                    
                    <button type="submit" class="bg-blue-500 text-white p-2 rounded w-full">S'inscrire</button>
                </form>
            </div>
        </div>
    </section>
</main>

<%- include('partials/footer') %>